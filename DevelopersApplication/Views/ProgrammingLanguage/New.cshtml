
@{
    ViewBag.Title = "New";
}
<link rel="stylesheet" type="text/css" href="~/Content/pl.css" />
<div class="container-fluid">
    <div class="floatleft">
        <a class="backbtn" href="/ProgrammingLanguage/List">Back</a>
    </div>
    <h2>Create Programming Language</h2>
    <div class="form-container">
        <form action="/ProgrammingLanguage/Create" method="POST" name="createprogramminglanguage">
            <div class="form-group">
                <label class="label" for="Language">Language</label>
                <input type="text" name="Language" class="formcontrol" />
            </div>
            <div class="form-group">
                <label class="label" for="LanguageInfo">Language Info</label>
                <input type="text" name="LanguageInfo" class="formcontrol" />

            </div>
            <div class="form-group">
                <label class="label" for="IDEUsed">IDE Used</label>
                <input type="text" name="IDEUsed" class="formcontrol" />
            </div>
            <div>
                <input class="btn" type="submit" name="submit" value="Add Programming Language" />
            </div>

        </form>
    </div>
</div>
