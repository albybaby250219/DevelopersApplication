@model DevelopersApplication.Models.ViewModels.DetailsCareer
@{
    ViewBag.Title = "Details";
}
<a href="/Career/List">Go Back to the list of careers</a>
<div><a href="/Career/Edit/@Model.SelectedCareer.CareerId">Update</a></div>
<br />
<a style="color:#ab2020;" href="/Career/DeleteConfirm/@Model.SelectedCareer.CareerId">Delete</a>
<h2>@Model.SelectedCareer.CareerName</h2>
<div> @Model.SelectedCareer.CareerDesc</div>


<div style="margin-top:100px;">
    <h3>Coders related to this Career</h3>
    @foreach (var coder in Model.RelatedCoders)
    {
        <a href="/Coder/Details/@coder.CoderId">@coder.Name</a>

    }
</div>

