@model DevelopersApplication.Models.CareerDto

@{
    ViewBag.Title = "DeleteConfirm";
}
<link rel="stylesheet" type="text/css" href="~/Content/career.css" />
<div class="container-fluid">
    <div class="floatleft">
        <a class="backbtn" href="/Career/List">Cancel</a>
    </div>
    <div class="delete">
        <h2>Are you sure you want to delete this Career?</h2>
        <a href="/Career/List">Cancel</a>
        <h3>Career Name: @Model.CareerName</h3>
        <p>Career Desc @Model.CareerDesc</p>
        <form action="/Career/Delete/@Model.CareerId" method="POST">
            <input class="deletebtn" type="submit" value="Confirm Delete" />
        </form>
    </div>
</div>